<?xml version="1.0" encoding="UTF-8"?>
<syntax name="pug">
    <meta>
        <name>Pug</name>
        <type>markup</type>
        <preferred-file-extension>pug</preferred-file-extension>
    </meta>
    
    <detectors>
        <extension priority="1.0">pug</extension>
        <match-content lines="1" priority="0.7">^!!!</match-content>
    </detectors>
    
<comments>
    <single>
        <expression>//-</expression>
    </single>
</comments>

<brackets>
    <pair open="{" close="}" />
    <pair open="[" close="]" />
    <pair open="(" close=")" />
</brackets>

<scopes>
    <!-- Values -->
    <scope name="pug.value.text" spell-check="true">
        <expression>\\.*$</expression>
    </scope>
    <include syntax="self" collection="strings" />
    <scope name="emblem.value.symbol">
        <expression>[\+][A-Za-z][A-Za-z0-9_]*</expression>
    </scope>



    <!-- Expressions -->
    <scope name="pug.expression">
        <starts-with>
            <expression>^\s*-</expression>
        </starts-with>
        <ends-with>
            <expression>$</expression>
        </ends-with>
        <subsyntax name="ruby">
            <cut-off>
                <expression>$</expression>
            </cut-off>
        </subsyntax>
    </scope>
    <scope name="pug.evaluation">
        <starts-with>
            <expression>==?(?!&gt;)</expression>
        </starts-with>
        <ends-with>
            <expression>$</expression>
        </ends-with>
        <subsyntax name="ruby">
            <cut-off>
                <expression>$</expression>
            </cut-off>
        </subsyntax>
    </scope>
    
    <!-- Tags -->
    <scope name="pug.element">
        <expression>^\s*(?:([a-zA-Z]+[a-zA-Z0-9]*))</expression>
        <capture number="1" name="pug.element.tag" />
    </scope>
    
    <scope name="pug.style">
        <expression>(?:([\.][a-zA-Z]+[a-zA-Z0-9-_]*))|(?:([\#][a-zA-Z]+[a-zA-Z0-9-_]*))</expression>
        <capture number="1" name="pug.style.selector.identifier.class" />
        <capture number="2" name="pug.style.selector.identifier.id" />
    </scope>	
    
    <scope name="pug.identifier">
        <expression>(?&lt;=- )([a-zA-Z]+[a-zA-Z0-9]*)</expression>
        <!-- <capture number="1" name="pug.style.selector.identifier.class" /> -->
    </scope>
    
    
    
    

    <scope name="pug.comment.single.html" spell-check="true">
        <expression>^\s*\/\/.*$</expression>
    </scope>
    
    <!-- Syntax -->
    <scope name="pug.declaration">
        <expression>^!!!.*$</expression>
    </scope>
    <scope name="pug.bracket">
        <expression>[\(\[\{\)\]\}]</expression>
    </scope>
    <scope name="pug.operator">
        <expression>(\==?\&gt;)</expression>
    </scope>
    
    <!-- Comments -->
    <scope name="pug.comment.single" spell-check="true">
        <expression>^\s*\/\/.*$</expression>
    </scope>
</scopes>

<collections>
    <!-- Strings -->
    <collection name="strings">
        <scope name="pug.string.double-quoted">
            <expression>&quot;(?:[^&quot;\\]|\\.)*(?:&quot;|$)</expression>
        </scope>
        <scope name="pug.string.single-quoted">
            <expression>&apos;(?:[^&apos;\\]|\\.)*(?:&apos;|$)</expression>
        </scope>
    </collection>
</collections>
</syntax>
